@model IEnumerable<Domain_.Entities.Book>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="panel panel-default">
    <div class="panel-heading">
        Список книг
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Действия
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { item.Id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>                
                <td class="text-right">
                    @item.Price.ToString("# руб")
                </td>
                <td class="text-center">
                   @using (Html.BeginForm("Delete", "Admin"))
                   {
                       @Html.Hidden("Id",item.Id)
                       <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                   }
                </td>
            </tr>
            }

        </table>

        <div class="panel-footer">
            @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default" })
        </div>
    </div>

</div>
